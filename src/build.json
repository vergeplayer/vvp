{
    "name": "vvp",
    "version": "0.1.0",
    "description": "Verge Video Player",
    "author": "zhengzk",
    "exports": "window",
    "templates": {
        "base": "templates/jade/",
        "src": [
            "components/**/*.jade",
            "plugin/**/*.jade",
            "service/**/*.jade",
            "layout/player.jade",
            "layout/service.jade",
            "layout/plugin.jade",
            "layout/stage.jade",
            "verge/verge.jade"
        ]
    },
    "mapping":{
        "verge":"vvp.Player"
    },
    "scripts": {
        "base": "scripts/js/",
        "lib": [
            "base/**/*.js"
        ],
        "dependencies": {
            "vQ": "vq/"
        },
        "src": [
            "log.js",
            "verge.js",
            "vvp.js",
            "core/**/*.js",
            "utils/**/*.js",
            "video-player.js",
            "player.js",
            "VIEW",
            "components/**/*.js",
            "plugins/**/*.js",
            "plugin.js",
            "vvp-player.js",
            "ready.js",
            "exports.js"
        ]
    }
}
